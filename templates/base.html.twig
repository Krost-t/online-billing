<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Welcome!
			{% endblock %}
		</title>
		<link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
		{% block stylesheets %}
			<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-...ton hash..." crossorigin="anonymous">
			<link rel="stylesheet" href="{{ asset('styles/base.css') }}">
		{% endblock %}
	</head>

	<body>
		<header>
			<div class="logo-accueil">
				<a href="{{ path('app_accueil') }}" title="Accueil">
					<img src="{{ asset('images/logo.png') }}" alt="Logo"/>
				</a>
			</div>
			<i class="bi bi-list"></i>

		</header>

		<nav class="nav-place-mobile">
			<i class="bi bi-house"></i>
			<i class="bi bi-x-lg"></i>
			<ul>
				<li>
					<a href="#">Accueil</a>
				</li>
				<li>
					<a href="#">Client</a>
				</li>
				<li>
					<a href="#">Devis</a>
				</li>
				<li>
					<a href="{{ path('app_facture_index') }}">Factures</a>
				</li>
				<li>
					<a href="#">Facture d'achat</a>
				</li>
				<li>
					<a href="#">Bilan</a>
				</li>
				<li class="deco">
					<a href="{{ path('app_logout')}}">Déconnexion</a>
				</li>
			</ul>
		</nav>

		<aside>
			<div class="icon-aside">
				<i class="bi bi-person-circle"></i>
				<span>{{ app.user.nom }}
					{{ app.user.prenom }}</span>
			</div>
			<ul class="menu-aside">
				<li data-path="/home">
					<a href="{{ path('app_home') }}">
						<span>
							<i class="bi bi-house"></i>
							Accueil</span>
						<i class="bi bi-caret-right-fill"></i>
					</a>
				</li>
				<li>
					<a href="{{ path('app_client_index') }}">
						<span>
							<i class="bi bi-person-vcard-fill"></i>
							Client</span>
						<i class="bi bi-caret-right-fill"></i>
					</a>
				</li>
				<li>
					<a href="{{ path('app_devis_index') }}">
						<span>
							<i class="bi bi-card-list"></i>
							Devis</span>
						<i class="bi bi-caret-right-fill"></i>
					</a>
				</li>
				<li>
					<a href="{{ path('app_facture_index') }}">
						<span>
							<i class="bi bi-journal-text"></i>Factures</span>
						<i class="bi bi-caret-right-fill"></i>
					</a>
				</li>
				<li>
					<a href="{{ path('app_facture_achat_index') }}">
						<span>
							<i class="bi bi-credit-card-2-back"></i>
							Facture d'achat</span>
						<i class="bi bi-caret-right-fill"></i>
					</a>
				</li>
				<li>
					<a href="# {# {{ path('app_bilan_index') }} #}">
						<span>
							<i class="bi bi-bar-chart-line"></i>
							Bilan</span>
						<i class="bi bi-caret-right-fill"></i>
					</a>
				</li>
				<div class="bas-page">
					<li>
						<span>
							<i class="bi bi-gear"></i>
							Paramètres</span>
						<i class="bi bi-caret-right-fill"></i>
					</li>
					<li id="logOut" class="deco">
						<span>
							<i class="bi bi-box-arrow-in-left"></i>
							Déconnexion</span>
						<i class="bi bi-caret-right-fill"></i>
					</li>
				</div>
			</ul>

		</aside>

		<main>
			{% block body %}{% endblock %}
		</main>


	</body>


	{% block javascripts %}
		{% block importmap %}
			{{ importmap('app') }}
		{% endblock %}
		<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css">
	{% endblock %}
</html>
