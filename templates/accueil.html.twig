<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}{% endblock %}
		</title>
		<link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
		{% block stylesheets %}
			<link rel="stylesheet" href="{{ asset('styles/accueil.css') }}">
		{% endblock %}

	</head>
	<body>
		<header>
			<div class="logo-accueil">
				<a href="{{ path('app_accueil') }}" title="Accueil">
					<img src="{{ asset('images/logo.png') }}" alt="Logo"/>
				</a>
			</div>
			<i class="bi bi-list"></i>
			<nav class="nav-place">
				<ul>
					<li><a href="{{ path('app_register') }}">Inscription</a></li>
					<li><a href="{{ path('app_login') }}">Connexion</a></li>
				</ul>
			</nav>
		</header>

		<nav class="nav-place-mobile">
			<i class="bi bi-house"></i>
			<i class="bi bi-x-lg"></i>
			<ul>
				<li><a href="{{ path('app_register') }}" onclick="location.reload()">Inscription</a></li>
				<li><a href="{{ path('app_login') }}">Connexion</a></li>
			</ul>
		</nav>

		{% block body %}{% endblock %}

		<footer>
			<p>&copy;
				{{ "now"|date("Y") }}
				Christ </p>
		</footer>
	</body>
	{% block javascripts %}
		{% block importmap %}
			{{ importmap('app') }}
		{% endblock %}
		<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css">
	{% endblock %}
</html>