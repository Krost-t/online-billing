{% extends 'base.html.twig' %}

{% block title %}Devis{% endblock %}

{% block body %}
    <h1>Devis</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ devi.id }}</td>
            </tr>
            <tr>
                <th>Contions</th>
                <td>{{ devi.contions }}</td>
            </tr>
            <tr>
                <th>Etat</th>
                <td>{{ devi.etat.value }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ devi.createdAt ? devi.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
				<th>Client</th>
				<td>{{ devi.client ? devi.client.nom : 'N/A' }}</td>
			</tr>
			<tr>
				<th>Statut Devis</th>
				<td>{{ devi.etat.value }}</td>
			</tr>
			<tr>
				<th>Montant HT</th>
				<td>{{ devi.getTotalHT()}}</td>
			</tr>
			<tr>
				<th>Montant TVA</th>
				<td>{{ devi.getTotalTVA()}}</td>
			</tr>
			<tr>
				<th>Montant TTC</th>
				<td>{{ devi.getTotalTTC()}}</td>
			</tr>
        </tbody>
    </table>

    <a href="{{ path('app_devis_index') }}">back to list</a>

    <a href="{{ path('app_devis_edit', {'id': devi.id}) }}">edit</a>

    {{ include('devis/_delete_form.html.twig') }}
{% endblock %}
